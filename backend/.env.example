# Database connection (Render Postgres External URL or local)
DATABASE_URL=postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=public

# Port the API listens on (Render may inject PORT)
PORT=3000

# Frontend origin for CORS/cookies (use your Vercel/Netlify URL in production)
CLIENT_URL=http://localhost:5174

# Strong random secret for JWT signing
JWT_SECRET=change-me

# Use true when served over HTTPS (Render prod), false for local HTTP
COOKIE_SECURE=false
